#include <stdio.h>
#include "xil_printf.h"
#include "xil_io.h"
#include "xparameters.h"
#include "ALU.h"
#include "sort.h"
#include "prog3_parity.h"
#include "prog4_hash.h"
#include "PWM.h"
int main(){
	while(getchar() != EOF) {
	int ctrl;
	printf("please input 1~5 \n1:Sorting\n2:Arithmetic\n3:Parity\n4:Hash\n5:PWM\ninput:\n");
	scanf("%d",&ctrl);
	while(ctrl > 5 || ctrl < 1){
		printf("please input 1~5 \n1:Sorting\n2:Arithmetic\n3:Parity\n4:Hash\n5:PWM\ninput:\n");
		scanf("%d",&ctrl);
	}
	printf("----------------------------------------------------------\n");
	switch(ctrl){
		case 1:{
			u32	data, Sum;
			u32 a0,a1,a2,a3,a4,a5,a6,a7;
			u32 s0,s1,s2,s3,s4,s5,s6,s7;
			printf("Sorting\n\n");
			printf("Please input numbers that less than 15 (0~15)\n");
			printf("Input a0:");
			scanf("%d", &a0);
			printf(" %d\r\n", a0);
			printf("Input a1:");
			scanf("%d", &a1);
			printf(" %d\r\n", a1);
			printf("Input a2:");
			scanf("%d", &a2);
			printf(" %d\r\n", a2);
			printf("Input a3:");
			scanf("%d", &a3);
			printf(" %d\r\n", a3);
			printf("Input a4:");
			scanf("%d", &a4);
			printf(" %d\r\n", a4);
			printf("Input a5:");
			scanf("%d", &a5);
			printf(" %d\r\n", a5);
			printf("Input a6:");
			scanf("%d", &a6);
			printf(" %d\r\n", a6);
			printf("Input a7:");
			scanf("%d", &a7);
			printf(" %d\r\n", a7);

			data = a0 + (a1 << 4) + (a2 << 8) + (a3 << 12) + (a4 << 16) + (a5 << 20) + (a6 << 24) + (a7 << 28);

			//printf("data input array = %d\r\n", data);

			Sum = sort(XPAR_SORT_0_S00_AXI_BASEADDR, data);

			//printf("sum array = %d\r\n", Sum);

			s7 = (Sum >> 28);
			Sum = Sum - (s7 << 28);
			s6 = (Sum >>  24);
			Sum = Sum - (s6 << 24);
			s5 = (Sum >> 20);
			Sum = Sum - (s5 << 20);
			s4 = (Sum >> 16);
			Sum = Sum - (s4 << 16);
			s3 = (Sum >> 12);
			Sum = Sum - (s3 << 12);
			s2 = (Sum >> 8);
			Sum = Sum - (s2 << 8);
			s1 = (Sum >> 4);
			Sum = Sum - (s1 << 4);
			s0 = Sum;

			printf("Sorted array = %d, %d, %d, %d, %d, %d, %d, %d\n\r", s0, s1, s2, s3, s4, s5, s6, s7);
			break;
		}
		case 2:{
				int a,b,op;
				int of;
				int result;
				printf("Arithmetic\n\n");
				printf("input A = ");
				scanf("%d",&a);
				while(a > 127 || a < -128){
					printf("please input A between -128~127 = ");
					scanf("%d",&a);
				}
				printf("%d \n",a);
				printf("input B = ");
				scanf("%d",&b);
				while(b > 127 || b < -128){
						printf("please input B between -128~127 = ");
						scanf("%d",&b);
				}
				printf("%d \n",b);
				printf("input Operator 0:add 1:sub 2:mul\n");
				scanf("%d",&op);
				while(op > 2 || op < 0){
						printf("please input Operator between 0~2 = ");
						scanf("%d",&op);
				}
				if(op == 0)      	printf("%d + %d = ",a,b);
				else if(op == 1)	printf("%d - %d = ",a,b);
				else if(op == 2)	printf("%d * %d = ",a,b);
				else				printf("no \n");
				result = alu(XPAR_ALU_0_S00_AXI_BASEADDR,a,b,op,&of);
				printf("%d \n",result);
				if(of == 0) printf("no overflow \n");
				else if(of == 1)    printf("overflow \n");

			break;
		}
		case 3:{
				int	I, P;
				printf("Parity\n\n");
				printf("Input I:");
				scanf("%d", &I);
				printf(" %d\r\n", I);
				P = parity(XPAR_PROG3_PARITY_0_S00_AXI_BASEADDR, I);
				printf("parity I = %d\n\r", P);
			break;
		}
		case 4:{
			int	I, H;
			printf("Hash\n\n");
			printf("Input number:");
			scanf("%d", &I);
			printf(" %d\r\n", I);
			H = hash(XPAR_PROG4_HASH_0_S00_AXI_BASEADDR, I);

			printf("parity I = %d\n\r", H);
			break;
		}
		case 5:{
			u32 a0,a1,a2;
			printf("PWM\n\n");
			printf("Please input numbers that less than 255 (0~255)\n");
			printf("Input red:");
			scanf("%d", &a0);
			printf(" %d\r\n", a0);
			printf("Input green:");
			scanf("%d", &a1);
			printf(" %d\r\n", a1);
			printf("Input blue:");
			scanf("%d", &a2);
			printf(" %d\r\n", a2);

			pwm(XPAR_PWM_0_S00_AXI_BASEADDR, a0, a1, a2);
			break;
		}
		default:{
			printf("error");
			break;
		}
	}

	printf("\n\n----------------------------------------------------------\n");

	}
	printf("Program End.\n\r");
	return 0;
}
